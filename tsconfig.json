{
    "compilerOptions": {
      "target": "esnext",
      "lib": [
        "dom",
        "dom.iterable",
        "esnext"
      ],
      "skipLibCheck": true,
      "esModuleInterop": true,
      "allowJs": true,
      "allowSyntheticDefaultImports": true,
      "strict": false,
      "forceConsistentCasingInFileNames": true,
      "module": "commonjs",
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "noEmit": false,
      "baseUrl": "src",
      "experimentalDecorators": true
    },
    "include": [
      "src/main/**/*.ts", "src/core/**/*.ts",
    ],
    "exclude": [
      "**/_*"
    ]
}